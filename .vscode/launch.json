{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Linux client",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/linuxWrapper/example",
            "args": [
                "-d"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}